<div id="content-home-wrapper" class="container mt-5 mb-5">
  <div class="row justify-content-md-center">
    <div id="content-home" class="col-6">
      <div class="heading-title border-bottom-small-black-expand">
        <h3 class="fs-14 fwa-700 text-uppercase">{{ parameters.project_name }}</h3>
      </div>

      {{ form_start(form, { 'attr': { 'class': 'currency-calculator-form' } }) }}

      {% set amountError = form_errors(form.amount) %}
      {% set currencyError = form_errors(form.currency) %}

      <div class="form-group mb-2{% if amountError is not empty %} form-field-border-error{% endif %}">
        {{ form_widget(form.amount) }}
        {% if amountError is not empty %}<span class="text-danger form-field-text-error">{{ amountError|raw }}</span>{% endif %}
      </div>

      <div class="form-group mb-2{% if currencyError is not empty %} form-field-border-error{% endif %}">
        {{ form_widget(form.currency) }}
        {% if currencyError is not empty %}<span class="text-danger form-field-text-error">{{ currencyError|raw }}</span>{% endif %}
      </div>

      <button type="submit" class="security-form-register-submit btn clbg-blue clbgh-blue wp-100 fs-14 fwd-700 clf-whitest-lightest-1 clfh-whitest-lightest-1 py-1">Convert</button>
      {{ form_end(form) }}
    </div>
  </div>
  {% if convertedValue %}
    <div class="row justify-content-md-center">
      <div class="col-6">
        <p class="mt-3">The converted value is: <span class="font-weight-bold">{{ convertedValue }} {{ currencyNameTo }}</span></p>
      </div>
    </div>
  {% endif %}
</div>
